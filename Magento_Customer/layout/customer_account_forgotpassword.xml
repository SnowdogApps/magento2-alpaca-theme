<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    layout="1column"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">heading--page-full-width</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" translate="true" xsi:type="string">Home</item>
                    <item name="label" translate="true" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Forgot your password</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" translate="true" xsi:type="string">Forgot your password</item>
                    <item name="label" translate="true" xsi:type="string">Forgot your password</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
