            autocomplete="family-name"
            <?= $block->getFieldParams() ?>
            <?= ($block->getAttributeValidationClass('lastname') == 'required-entry') ? ' data-validate="{required:true}" required' : '' ?>
        >
    </div>
<?php if ($suffix): ?>
    <div
        class="
            input
            <?= $block->isSuffixRequired() ? 'required' : '' ?>
        "
    >
        <label
            class="input__label"
            for="<?= $block->getFieldId('suffix') ?>"
        >
            <?= $block->getStoreLabel('suffix') ?>
        </label>
        <?php if ($block->getSuffixOptions() === false): ?>
            <input
                type="text"
                id="<?= $block->getFieldId('suffix') ?>"
                name="<?= $block->getFieldName('suffix') ?>"
                value="<?= $block->escapeHtmlAttr($block->getObject()->getSuffix()) ?>"
