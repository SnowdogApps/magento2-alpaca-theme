<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <update handle="sales_order_item_renderers"/>
    <update handle="sales_order_item_price"/>
    <update handle="sales_order_info_links"/>
    <body>
        <move element="order.status" destination="order-info-top-container" before="-"/>
        <move element="order.date" destination="order-info-top-container" after="order.status"/>
        <move element="order.actions.container" destination="order-info-top-container" after="order.date"/>
        <referenceContainer name="order.actions.container"
                            htmlClass="actions-toolbar actions-toolbar--right order-actions-toolbar"
        />
        <referenceContainer name="content">
            <container name="order-info-top-container"
                       htmlTag="div"
                       htmlClass="users-account users-account--right"
                       before="-"
            />
        </referenceContainer>
    </body>
</page>
