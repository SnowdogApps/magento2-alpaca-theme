<script id="template-registrant" type="text/x-magento-template">
    <input name="registrant[<%- data._index_ %>][person_id]" value="" id="registrant:person_id<%- data._index_ %>" class="input__field" type="hidden" />
    <div class="margin-bottom-m">
        <button type="button" class="button button--secondary action remove" id="btn-remove<%- data._index_ %>">
            <span>
                <?= $block->escapeHtml(__('Remove')) ?>
            </span>
        </button>
    </div>
    <fieldset class="fieldset">
        <div class="input firstname required">
            <label for="registrant:firstname<%- data._index_ %>" class="label"><span><?= $block->escapeHtml(__('First Name')) ?></span></label>
            <div class="control">
                <input name="registrant[<%- data._index_ %>][firstname]" value="" type="text" class="input__field" data-validate="{required:true}" id="registrant:firstname<%- data._index_ %>" />
            </div>
        </div>
        <div class="input lastname required">
            <label for="registrant:lastname<%- data._index_ %>" class="label"><span><?= $block->escapeHtml(__('Last Name')) ?></span></label>
            <div class="control">
                <input name="registrant[<%- data._index_ %>][lastname]" value="" type="text" class="input__field" data-validate="{required:true}" id="registrant:lastname<%- data._index_ %>" />
            </div>
        </div>
        <div class="input email required">
            <label for="registrant:email<%- data._index_ %>" class="label"><span><?= $block->escapeHtml(__('Email')) ?></span></label>
