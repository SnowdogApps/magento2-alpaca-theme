                    <label for="registrant:<?php if (!$isStatic) :?>custom:<?php endif;?><?= $block->escapeHtmlAttr($field) ?><%- data._index_ %>" class="label"><span><?= $block->escapeHtml(__("%1", $data['label'])) ?>
                        </span>
                    </label>
                    <div class="control">
                        <?= /* @noEscape */ $block->renderField($data, $field, '{{' . $field . '_value}}') ?>
                    </div>
                </div>
