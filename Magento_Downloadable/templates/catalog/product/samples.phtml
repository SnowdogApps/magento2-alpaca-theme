<?php
/**
 * Downloadable product links
 *
 * @var $block \Magento\Downloadable\Block\Catalog\Product\Samples
 */
?>

<?php if ($block->hasSamples()) : ?>
    <dl
        class="
            margin-top-xs
            margin-bottom-m
            items
            samples
        "
    >
        <dt
            class="
                product-view__short-description-heading
                margin-bottom-xs
                item-title
                samples-item-title
            "
        >
            <?= $block->escapeHtml($block->getSamplesTitle() . ':') ?>
        </dt>
        <?php $_samples = $block->getSamples() ?>
        <?php foreach ($_samples as $_sample) : ?>
            <dd class="item samples-item">
                <a
                    href="<?= $block->escapeUrl($block->getSampleUrl($_sample)) ?>"
                    <?= $block->getIsOpenInNewWindow() ? 'onclick="this.target=\'_blank\'"' : '' ?>
                    class="
                        link
                        link--invert
                        item-link
                        samples-item-link
                    "
                >
                    <?= $block->escapeHtml($_sample->getTitle()) ?>
                </a>
            </dd>
        <?php endforeach; ?>
    </dl>
<?php endif; ?>
