<?php
use Magento\Downloadable\Model\Link\Purchased\Item;

/**
 * @var $block \Magento\Downloadable\Block\Customer\Products\ListProducts
 * @var \Magento\Framework\View\Helper\SecureHtmlRenderer $secureRenderer
 */
?>
<?php $_items = $block->getItems(); ?>
<?php if (count($_items)): ?>
    <div class="dashboard-table">
        <div class="dashboard-table__header">
            <h3 class="dashboard-table__title">
                <?= $escaper->escapeHtml(__('My Downloadable Products')) ?>
            </h3>
        </div>

        <div class="dashboard-table__content">
            <table
                id="my-downloadable-products-table"
                class="table dashboard-table__table"
            >
                <thead>
                    <tr>
                        <th scope="col" class="id">
                            <?= $escaper->escapeHtml(__('Order #')) ?>
                        </th>

                        <th scope="col" class="date">
                            <?= $escaper->escapeHtml(__('Date')) ?>
                        </th>

                        <th scope="col" class="title">
                            <?= $escaper->escapeHtml(__('Title')) ?>
                        </th>

                        <th scope="col" class="status">
                            <?= $escaper->escapeHtml(__('Status')) ?>
                        </th>

                        <th scope="col" class="remaining">
                            <?= $escaper->escapeHtml(__('Remaining Downloads')) ?>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    <?php foreach ($_items as $_item): ?>
                        <?php
                            $getOrderId = $block->getOrderViewUrl($_item->getPurchased()->getOrderId());
                        ?>

                        <tr>
                            <td data-th="<?= $escaper->escapeHtmlAttr(__('Order #')) ?>" class="id">
                                <a href="<?= $escaper->escapeUrl($getOrderId) ?>"
                                   title="<?= $escaper->escapeHtmlAttr(__('View Order')) ?>"
                                >
                                    <?= $escaper->escapeHtml($_item->getPurchased()->getOrderIncrementId()) ?>
                                </a>
                            </td>

                            <td data-th="<?= $escaper->escapeHtmlAttr(__('Date')) ?>" class="date">
                                <?= $escaper->escapeHtml($block->formatDate($_item->getPurchased()->getCreatedAt())) ?>
                            </td>

                            <td data-th="<?= $escaper->escapeHtmlAttr(__('Title')) ?>" class="title">
                                <strong class="product-name">
                                    <?= $escaper->escapeHtml($_item->getPurchased()->getProductName()) ?>
                                </strong>
                                <?php if ($_item->getStatus() == Item::LINK_STATUS_AVAILABLE): ?>
                                    <?php
                                        $clickFunction = $block->getIsOpenInNewWindow() ? 'onclick="this.target=\'_blank\'"' : '';
                                    ?>
                                    <a
                                        href="<?= $escaper->escapeUrl($block->getDownloadUrl($_item)) ?>"
                                        id="download_<?= /* @noEscape */ $_item->getPurchased()->getProductId() ?>"
                                        title="<?= $escaper->escapeHtmlAttr(__('Start Download')) ?>"
                                        class="link download"
                                        <?= /* @noEscape */ $clickFunction; ?>
                                    >
                                        <?= $escaper->escapeHtml($_item->getLinkTitle()) ?>
                                    </a>
                                <?php endif; ?>
                            </td>

                            <td
                                data-th="<?= $escaper->escapeHtmlAttr(__('Status')) ?>"
                                class="status"
                            >
                                <?= __(ucfirst($_item->getStatus())) ?>
                            </td>

                            <td
                                data-th="<?= $escaper->escapeHtmlAttr(__('Remaining Downloads')) ?>"
                                class="remaining"
                            >
                                <?= $block->getRemainingDownloads($_item) ?>
                            </td>
                        </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
        </div>
    </div>

    <?php if ($block->getChildHtml('pager')): ?>
        <?= $block->getChildHtml('pager'); ?>
    <?php endif; ?>

<?php else: ?>
    <div class="message info empty">
        <?= $escaper->escapeHtml(__('You have not purchased any downloadable products yet.')); ?>
    </div>
<?php endif; ?>

<div class="action">
    <div class="action__handler">
        <a href="<?= $escaper->escapeUrl($block->getBackUrl()) ?>"
           class="link action__link"
        >
            <?= $escaper->escapeHtml(__('Back')) ?>
        </a>
    </div>
</div>
