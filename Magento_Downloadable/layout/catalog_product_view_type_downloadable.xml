<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <!--Moved blocks-->
        <move
            element="product.info.downloadable.samples"
            destination="product.info.main"
            after="product.info.price"
        />
        <move
            element="product.column.right.benefits"
            destination="product.info.main"
            after="product.info.media"
        />
        <move
            element="product.info"
            destination="product.info.main"
            after="product.info.media"
        />
        <move
            element="product.info.social"
            destination="product.column.right.extra.actions"
            before="product.info.addtocart"
        />

        <!-- Removed blocks -->
        <referenceBlock
            name="product.info.downloadable"
            remove="true"
        />
        <referenceBlock
            name="amlocator.link"
            remove="true"
        />

    </body>
</page>
