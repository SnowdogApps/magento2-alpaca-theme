        data-amgdpr-content-from="<?= $block->escapeHtmlAttr($block->getScope()) ?>"
    >
        <input
            type="hidden"
            name="amgdpr_agreement[<?= $block->escapeHtmlAttr($consent->getConsentCode()) ?>]"
            value="0"
        >

        <input
            type="checkbox"
            name="amgdpr_agreement[<?= $block->escapeHtmlAttr($consent->getConsentCode()) ?>]"
