                     "productSkuItem":{
                        "rowIndex": "<%- data.rowIndex %>",
                        "tableWigetSelector":"[data-role=block-addbysku]",
                        "urlSku":"<?= /* @noEscape */ $block->getUrl('quickorder/ajax/search') ?>"}}'>
