        "quickOrderItemTable":{
                "addBlockData":{"widgetId":"<?= /* @noEscape */ $block->getUniqueId() ?>"},
                "addEvent":"addNewRow",
                "addSelector":"[data-role=new-block]"
        }
     }'>
