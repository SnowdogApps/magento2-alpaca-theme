        <div class="webforms-gdpr-text">
            <?= /* @noEscape */ $this->getAgreementText() ?>
        </div>
    <?php endif; ?>
    <?php if ($this->getShowCheckbox()): ?>
        <div class="checkbox" role="group">
            <input
                id="gdpr_<?= $block->escapeHtmlAttr($this->getUid()) ?>"
