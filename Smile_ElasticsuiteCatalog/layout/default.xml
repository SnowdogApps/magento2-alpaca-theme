<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.search">
            <arguments>
                <argument name="rendererList" xsi:type="array">
                    <item name="results_header" xsi:type="array">
                        <item name="template" xsi:type="string">Smile_ElasticsuiteCatalog/autocomplete/results-header</item>
                    </item>
                    <item name="manufacturer" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Manufacturer</item>
                        <item name="template" xsi:type="string">Smile_ElasticsuiteCatalog/autocomplete/manufacturer</item>
                    </item>
                    <item name="results_footer" xsi:type="array">
                        <item name="template" xsi:type="string">Smile_ElasticsuiteCatalog/autocomplete/results-footer</item>
                    </item>
                    <item name="close_button" xsi:type="array">
                        <item name="template" xsi:type="string">Smile_ElasticsuiteCatalog/autocomplete/close-button</item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <!--Removed blocks-->
        <referenceBlock name="sale.reorder.sidebar" remove="true"/>
    </body>
</page>
