<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns" htmlClass="grid container">
        <referenceContainer name="div.sidebar.main" htmlClass="grid__column grid__column--1-3 sidebar" />
        <referenceContainer name="div.sidebar.additional" htmlClass="grid__column grid__column--1-3 sidebar" />
        <referenceContainer name="main" htmlClass="grid__column grid__column--2-3" />
    </referenceContainer>
    <move element="div.sidebar.main" destination="columns" before="main" />
    <move element="div.sidebar.additional" destination="columns" before="main" />
</layout>
