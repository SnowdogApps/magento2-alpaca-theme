<?xml version="1.0"?>
<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <update handle="default_head_blocks"/>
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Magento\Framework\View\Element\Template"
                   name="header.content"
                   template="Magento_Theme::header/header.phtml"
                   before="main.content"
            >
                <block class="Magento\Framework\View\Element\Template"
                       name="marketing-bar"
                       template="Magento_Theme::header/marketing-bar.phtml"
                />


                <block class="Magento\Wishlist\Block\Link"
                       name="wish-list-link"
                       template="Magento_Theme::header/links/wishlist.phtml"
                />

                <block class="Magento\Customer\Block\Account\Link"
                       name="account-link"
                       template="Magento_Theme::header/links/account.phtml"
                />

                <block class="Magento\Framework\View\Element\Template"
                       name="contact-link"
                       template="Magento_Theme::header/links/contact.phtml"
                />

                <referenceBlock name="minicart" template="Magento_Theme::header/minicart.phtml"/>
                <referenceBlock name="logo" template="Magento_Theme::header/logo.phtml"/>
                <referenceBlock name="top.search" template="Magento_Theme::header/search.phtml"/>
            </block>
        </referenceContainer>

        <referenceContainer name="header-wrapper" htmlClass="page-header__content">
            <block name="main.menu.mobile" class="Snowdog\Menu\Block\Menu" template="Snowdog_Menu::menu-mobile.phtml" after="top.search">
                <arguments>
                    <argument name="menu" xsi:type="string">menu_mobile</argument>
                </arguments>
            </block>
            <block name="main.menu.desktop" class="Snowdog\Menu\Block\Menu" template="Snowdog_Menu::menu.phtml" before="top.search">
                <arguments>
                    <argument name="menu" xsi:type="string">main_menu</argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Footer layout -->
        <referenceContainer name="footer"
                            htmlClass="page-footer__content"
        >
            <container name="footer_first_row"
                       as="footer_first_row"
                       label="Page Footer First"
                       htmlTag="div"
                       htmlClass="page-footer__row grid container"
                       before="-"
            >
                <container name="footer_subscribe"
                           label="Page Footer Subscribe"
                           htmlTag="div"
                           htmlClass="page-footer__subscribe grid__column grid__column--1-2"
                />
                <container name="footer_social"
                           label="Page Footer Social"
                           htmlTag="div"
                           htmlClass="page-footer__social grid__column grid__column--1-2"
                >
                    <block class="Magento\Cms\Block\Block"
                           name="social_list"
                    >
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer-social-links</argument>
                        </arguments>
                    </block>
                </container>
            </container>
            <referenceBlock name="footer_links">
                <arguments>
                    <argument name="css_class" xsi:type="string">footer-menu list list--divided list--min-medium-horizontal list--center</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>

        <!-- Footer links -->
        <referenceBlock name="catalog-search-advanced-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">list__link</item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="privacy-policy-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">list__link</item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="contact-us-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">list__link</item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="sales-guest-form-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">list__link</item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="search-term-popular-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">list__link</item>
                </argument>
            </arguments>
        </referenceBlock>

        <!-- End of Footer layout -->

        <!--Removed blocks-->
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true" />

        <!--Removed constainers-->
        <referenceContainer name="header.container" remove="true" />

        <!--Moved blocks-->
        <move element="logo" destination="header.content" />
        <move element="top.search" destination="header.content" as="search" />
        <move element="minicart" destination="header.content" />

        <move element="store_language" destination="header.panel.action" before="-"/>
        <move element="currency" destination="header.panel.action" before="store_language" />
        <move element="catalog.compare.link" destination="top.links" after="-"/>
        <move element="copyright" destination="before.body.end"/>
        <move element="form.subscribe"
              destination="footer_subscribe"
              before="-"
        />
        <move element="catalog.compare.sidebar" destination="div.sidebar.main" after="-"/>
        <move element="wishlist_sidebar" destination="div.sidebar.main" after="-"/>
    </body>
</page>
