<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <head>
        <css src="css/styles.css" />
    </head>
    <body>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Js\Components" name="head.theme.libs" as="themejs" template="Magento_Theme::js/theme-libs.phtml" before="-"/>
            <block class="Magento\Framework\View\Element\Js\Components" name="global-variables" as="global-vars" template="Magento_Theme::js/global-variables.phtml" before="-"/>
        </referenceContainer>
    </body>
</page>
