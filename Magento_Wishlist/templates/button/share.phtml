?>
<?php if ($getWishlistItems && $getWishlistShared < $getWishlistEmailLimit): ?>
    <button
        type="submit"
        name="save_and_share"
        title="<?= $escaper->escapeHtmlAttr(__('Share Wish List')) ?>"
        class="button button--secondary action__button share"
    >
        <?= __('Share Wish List') ?>
    </button>
<?php endif;?>
