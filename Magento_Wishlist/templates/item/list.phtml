<?php
/** @var \Magento\Wishlist\Block\Customer\Wishlist\Items $block */
$columns = $block->getColumns();
?>

<?php if (count($block->getItems())): ?>
    <div class="row wishlist__grid">
        <?php foreach ($block->getItems() as $item): ?>
            <div class="col-xs-6 col-sm-4 wishlist__item">
                <div
                    data-row="product-item"
                    id="item_<?= $escaper->escapeHtmlAttr($item->getId()); ?>"
                >
                    <?php foreach ($columns as $column) : ?>
                        <?= $column->setItem($item)->toHtml();?>
                    <?php endforeach; ?>
                </div>
            </div>
        <?php endforeach; ?>
    </div>
<?php else: ?>
    <div class="message info empty">
        <?= $escaper->escapeHtml(__('This Wish List has no Items')); ?>
    </div>
<?php endif; ?>

<?php foreach ($columns as $column): ?>
    <?= $column->getAdditionalHtml(); ?>
<?php endforeach; ?>
