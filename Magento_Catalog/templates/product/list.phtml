<?php
use Magento\Framework\App\Action\Action;

// @codingStandardsIgnoreFile

/**
 * Product list template
 *
 * @var $block \Magento\Catalog\Block\Product\ListProduct
 * @var $imageBlockBuilder \Magento\Catalog\Block\Product\ImageBlockBuilder
 */
?>
<?php
    $_productCollection = $block->getLoadedProductCollection();
    $_helper = $this->helper('Magento\Catalog\Helper\Output');
?>
<?php if (!$_productCollection->count()): ?>
    <div class="message info empty">
        <?php /* @escapeNotVerified */ echo __('We can\'t find products matching the selection.') ?>
    </div>
<?php else: ?>
    <?php echo $block->getToolbarHtml() ?>
    <?php echo $block->getAdditionalHtml() ?>
    <?php
        if ($block->getMode() == 'grid') {
            $viewMode = 'products-grid';
            $imageDisplayArea = 'category_page_grid';
            $showDescription = false;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
        } else {
            $viewMode = 'products-list';
            $imageDisplayArea = 'category_page_list';
            $showDescription = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::FULL_VIEW;
        }
        /**
         * Position for actions regarding image size changing in vde if needed
         */
        $pos = $block->getPositioned();
    ?>
    <div class="container">
        <ul class="<?php /* @escapeNotVerified */ echo $viewMode; ?>">
            <?php /** @var $_product \Magento\Catalog\Model\Product */ ?>
            <?php foreach ($_productCollection as $_product): ?>
                <li class="product-item product <?php /* @escapeNotVerified */ echo $viewMode; ?>__item">
                    <div class="product-item-info" data-container="product-grid">
                        <?php
                            $productImage = $block->getImage($_product, $imageDisplayArea);
                            if ($pos != null) {
                                $position = ' style="left:' . $productImage->getWidth() . 'px;'
                                    . 'top:' . $productImage->getHeight() . 'px;"';
                            }
                        ?>
                        <a href="<?php /* @escapeNotVerified */ echo $_product->getProductUrl() ?>"
                           class="product__link"
                           title="<?php /* @escapeNotVerified */ echo $_helper->productAttribute($_product, $_product->getName(), 'name'); ?>"
                        >
                            <div class="product__img-box">
                                <?php echo $productImage->toHtml(); ?>
                            </div>
                            <h2 class="heading product__name">
                                <?php /* @escapeNotVerified */ echo $_helper->productAttribute($_product, $_product->getName(), 'name'); ?>
                            </h2>
                        </a>

                        <div class="product-item-details product__details">
                            <?php
                                $_productNameStripped = $block->stripTags($_product->getName(), null, true);
                            ?>
                            <!-- reviews summary -->
                            <?php echo $block->getReviewsSummaryHtml($_product, $templateType); ?>

                            <div class="product__price">
                                <?php /* @escapeNotVerified */ echo $block->getProductPrice($_product) ?>
                            </div>

                            <!-- configurable swatches -->
                            <?php echo $block->getProductDetailsHtml($_product); ?>

                            <div <?php echo strpos($pos, $viewMode . '-actions') ? $position : ''; ?>>
                                <?php if ($_product->isSaleable()): ?>
                                    <?php $postParams = $block->getAddToCartPostParams($_product); ?>
                                    <form data-role="tocart-form"
                                          action="<?php /* @escapeNotVerified */ echo $postParams['action']; ?>"
                                          method="post"
                                    >
                                        <input type="hidden"
                                               name="product"
                                               value="<?php /* @escapeNotVerified */ echo $postParams['data']['product']; ?>"
                                        >
                                        <input type="hidden"
                                               name="<?php /* @escapeNotVerified */ echo Action::PARAM_NAME_URL_ENCODED; ?>"
                                               value="<?php /* @escapeNotVerified */ echo $postParams['data'][Action::PARAM_NAME_URL_ENCODED]; ?>"
                                        >
                                        <?php echo $block->getBlockHtml('formkey')?>
                                        <button type="submit"
                                                title="<?php echo $block->escapeHtml(__('Add to Cart')); ?>"
                                                class="action tocart button button--fluid"
                                        >
                                            <span><?php /* @escapeNotVerified */ echo __('Add to Cart') ?></span>
                                        </button>
                                    </form>
                                <?php else: ?>
                                    <?php if ($_product->getIsSalable()): ?>
                                        <div class="stock available">
                                            <?php /* @escapeNotVerified */ echo __('In stock') ?>
                                        </div>
                                    <?php else: ?>
                                        <div class="stock unavailable">
                                            <?php /* @escapeNotVerified */ echo __('Out of stock') ?>
                                        </div>
                                    <?php endif; ?>
                                <?php endif; ?>
                                <div data-role="add-to-links"
                                     class="product__actions-secondary"<?php echo strpos($pos, $viewMode . '-secondary') ? $position : ''; ?>
                                >
                                    <?php if ($addToBlock = $block->getChildBlock('addto')): ?>
                                        <?php echo $addToBlock->setProduct($_product)->getChildHtml(); ?>
                                    <?php endif; ?>
                                </div>
                            </div>
                            <?php if ($showDescription):?>
                                <div class="description product-item-description">
                                    <?php /* @escapeNotVerified */ echo $_helper->productAttribute($_product, $_product->getShortDescription(), 'short_description') ?>
                                    <?php /* @escapeNotVerified */ echo __('Learn More') ?>
                                </div>
                            <?php endif; ?>
                       </div>
                    </div>
                </li>
            <?php endforeach; ?>
        </ul>
    </div>
    <?php echo $block->getToolbarHtml() ?>
    <?php if (!$block->isRedirectToCartEnabled()) : ?>
        <script type="text/x-magento-init">
        {
            "[data-role=tocart-form], .form.map.checkout": {
                "catalogAddToCart": {}
            }
        }
        </script>
    <?php endif; ?>
<?php endif; ?>
