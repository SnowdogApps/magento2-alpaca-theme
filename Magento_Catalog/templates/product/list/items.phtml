?>

<?php
switch ($type = $block->getType()) {
    case 'related-rule':
        if ($exist = $block->hasItems()) {
            $type = 'related';
            $class = $type;

            $image = 'related_products_list';
            $title = __('Related Products');
            $items = $block->getAllItems();
            $limit = $block->getPositionLimit();
            $shuffle = (int) $block->isShuffled();
            $canItemsAddToCart = $block->canItemsAddToCart();

            $showAddTo = true;
            $showCart = true;
            $templateType = null;
            $description = false;
        }
    break;

    case 'related':
        /** @var \Magento\Catalog\Block\Product\ProductList\Related $block */
        if ($exist = $block->getItems()->getSize()) {
            $type = 'related';
            $class = $type;

            $image = 'related_products_list';
            $title = __('Related Products');
            $items = $block->getItems();
            $limit = 0;
            $shuffle = 0;
            $canItemsAddToCart = $block->canItemsAddToCart();

            $showAddTo = true;
            $showCart = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
            $description = false;
        }
    break;

    case 'upsell-rule':
        if ($exist = $block->hasItems()) {
            $type = 'upsell';
            $class = $type;

            $image = 'upsell_products_list';
            $title = __('You may also like');
            $items = $block->getAllItems();
            $limit = $block->getPositionLimit();
            $shuffle = (int) $block->isShuffled();

            $showAddTo = true;
            $showCart = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
            $description = false;
            $canItemsAddToCart = false;
        }
    break;

    case 'upsell':
        /** @var \Magento\Catalog\Block\Product\ProductList\Upsell $block */
        if ($exist = count($block->getItemCollection()->getItems())) {
            $type = 'upsell';
            $class = $type;

            $image = 'upsell_products_list';
            $title = __('You may also like');
            $items = $block->getItemCollection()->getItems();
            $limit = $block->getItemLimit('upsell');
            $shuffle = 0;

            $showAddTo = true;
            $showCart = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
            $description = false;
            $canItemsAddToCart = false;
        }
    break;

    case 'crosssell-rule':
        /** @var \Magento\Catalog\Block\Product\ProductList\Crosssell $block */
        if ($exist = $block->hasItems()) {
            $type = 'crosssell';
            $class = $type;

            $image = 'cart_cross_sell_products';
            $title = __('More Choices:');
            $items = $block->getItemCollection();

            $showAddTo = true;
            $showCart = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
            $description = false;
            $canItemsAddToCart = false;
        }
    break;

    case 'crosssell':
        /** @var \Magento\Catalog\Block\Product\ProductList\Crosssell $block */
        if ($exist = count($block->getItems())) {
            $type = 'crosssell';
            $class = $type;

            $image = 'cart_cross_sell_products';
            $title = __('More Choices:');
            $items = $block->getItems();

            $showAddTo = true;
            $showCart = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
            $description = false;
            $canItemsAddToCart = false;
        }
    break;

    case 'new':
        if ($exist = $block->getProductCollection()) {
            $type = 'new';
            $mode = 'grid';
            $type = $type . ' ' . $mode;

            $class = 'widget' . ' ' . $type;

            $image = 'new_products_content_widget_grid';
            $title = __('New Products');
            $items = $exist;

            $showAddTo = true;
            $showCart = true;
            $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::SHORT_VIEW;
            $description = ($mode == 'list') ? true : false;
            $canItemsAddToCart = false;
        }
    break;

    case 'other':
    break;
}
?>
<?php
//slider config
$sliderArrows           = true;
$sliderItemClass        = 'slider__item';
$sliderClass            = 'slider--products';
$sliderInfinite         = 'no';
$sliderSlidesToShow     = '2';
$sliderSlidesToScroll   = '1';
$sliderResponsiveConfig = '[
    {
        "breakpoint": 767,
        "settings": {
            "slidesToShow": 3,
            "slidesToScroll": 1,
            "dots": false
        }
    },
    {
        "breakpoint": 1023,
        "settings": {
            "slidesToShow": 4,
            "slidesToScroll": 1,
            "dots": false
        }
    }
]';
?>

<?php if ($exist): ?>
    <?php if ($type == 'related' || $type == 'upsell'): ?>
        <?php if ($type == 'related'): ?>
            <section
                class="section <?= $class ?>"
                data-limit="<?= $limit ?>"
                data-shuffle="<?= $shuffle ?>"
            >
        <?php else: ?>
            <section
                class="section <?= $class ?>"
                data-mage-init='{ "upsellProducts": {} }'
                data-limit="<?= $limit ?>"
                data-shuffle="<?= $shuffle ?>"
            >
        <?php endif; ?>
    <?php else: ?>
        <section class="section <?= $class ?>">
    <?php endif; ?>

        <div class="section__heading">
            <h2
                id="block-<?= $class ?>-heading"
                class="
                    heading--first-level
                    margin-0
                "
            >
                <?= $title ?>
            </h2>
        </div>

        <div class="section__content section__content--products">
            <?php
            $sliderBlockBefore = $this->getLayout()
                ->createBlock("Magento\Framework\View\Element\Template")
                ->setTemplate("Magento_Theme::html/slider.phtml");

            $sliderBlockBefore->setData([
                'slider_html'       => 'before-slides',
                'arrows'            => $sliderArrows,
                'slider_class'      => $sliderClass,
                'infinite'          => $sliderInfinite,
                'slides_to_show'    => $sliderSlidesToShow,
                'slides_to_scroll'  => $sliderSlidesToScroll,
                'responsive_config' => $sliderResponsiveConfig
            ]);
            ?>

            <?= $sliderBlockBefore->toHtml(); ?>

            <?php foreach ($items as $key => $_item): ?>
                <?php $itemUrl = $block->getProductUrl($_item) ?>
                <div
                    class="
                        <?= $block->escapeHtmlAttr($sliderItemClass) ?>
                        <?= $key + 1 === 1 ? 'active' : '' ?>
                    "
                >
                    <div
                        class="
                            product-grid-item
                            product-grid-item--slider-item
                        "
                        tabindex="0"
                    >
                        <?= '<!-- ' . $image . '-->' ?>
                        <a
                            href="<?= $block->escapeUrl($itemUrl) ?>"
                            class="product-grid-item__link"
                            tabindex="-1"
                        >
                            <?php if ($_item->getBadge()): ?>
                                <?php $productBadges = $_item->getAttributeText('badge'); ?>
                                <div
                                    class="
                                        badges
                                        product-grid-item__badges
                                    "
                                >
                                    <?php if (is_array($productBadges)): ?>
                                        <?php foreach ($productBadges as $productBadge): ?>
                                            <div
                                                class="
                                                    badge
                                                    badge--<?= $block->escapeHtmlAttr(mb_strtolower($productBadge, 'UTF-8')) ?>
                                                "
                                            >
                                                <?= $block->escapeHtml($productBadge) ?>
                                            </div>
                                        <?php endforeach ?>
                                    <?php else: ?>
                                        <div
                                            class="
                                                badge
                                                badge--<?= $block->escapeHtmlAttr(mb_strtolower($productBadges, 'UTF-8')) ?>
                                            "
                                        >
                                            <?= $block->escapeHtml($productBadges) ?>
                                        </div>
                                    <?php endif ?>
                                </div>
                            <?php endif ?>
                            <div class="product-grid-item__image-wrapper">
                                <?= $block->getImage($_item, $image)->toHtml() ?>
                            </div>
                        </a>

                        <section class="product-grid-item__details">
                            <div class="product-grid-item__rating">
                                <?= $block->getReviewsSummaryHtml($_item, $templateType) ?>
                            </div>
                            <h3 class="product-grid-item__name">
                                <a
                                    href="<?= $block->escapeUrl($itemUrl) ?>"
                                    class="product-grid-item__name-link"
                                    title="<?= $block->escapeHtmlAttr($_item->getName()) ?>"
                                >
                                    <?php
                                        $productName = $block->escapeHtml($_item->getName());

                                        if (strlen($productName) > 42) {
                                            $productName = substr($productName, 0, 42) . '...';
                                        }
                                    ?>
                                    <?= $productName ?>
                                </a>
                            </h3>
                            <div class="product-grid-item__details-bottom">
                                <div class="product-grid-item__price">
                                    <?= $block->getProductPrice($_item) ?>
                                </div>
                                <?php if ($showAddTo || $showCart): ?>
                                    <div class="product-grid-item__actions">
                                        <?php if ($showAddTo): ?>
                                            <?php if ($addToBlock = $block->getChildBlock('addto')): ?>
                                                <div class="product-grid-item__secondary-action">
                                                    <?= $addToBlock->setProduct($_item)->getChildHtml() ?>
                                                </div>
                                            <?php endif; ?>
                                        <?php endif; ?>
                                        <?php if ($showCart): ?>
                                            <?php if ($_item->isSaleable()): ?>
                                                <div class="product-grid-item__primary-action">
                                                    <?php if ($_item->getTypeInstance()->hasRequiredOptions($_item)): ?>
                                                        <button
                                                            class="
                                                                button
                                                                button--add-to
                                                                tocart
                                                            "
                                                            data-mage-init='{
                                                                "redirectUrl": {
                                                                    "url": "<?= $block->getAddToCartUrl($_item) ?>"
                                                                }
                                                            }'
                                                            type="button"
                                                            aria-label="<?= $block->escapeHtmlAttr(__('Add to Cart')) ?>"
                                                        >
                                                            <svg
                                                                class="
                                                                    icon
                                                                    button__icon
                                                                "
                                                                role="presentation"
                                                                focusable="false"
                                                            >
                                                                <use xlink:href="<?= $block->escapeUrl($block->getViewFileUrl('/images/icons-sprite.svg#shopping-cart')) ?>"></use>
                                                            </svg>
                                                        </button>
                                                    <?php else: ?>
                                                        <!-- Adding to cart with ajax when product has required option and is available -->
                                                        <?php
                                                            $postDataHelper = $this->helper('Magento\Framework\Data\Helper\PostHelper');
                                                            $postParamsString = $postDataHelper->getPostData($block->getAddToCartUrl($_item), ['product' => $_item->getEntityId()]);
                                                            $postParams = json_decode($postParamsString, true);
                                                        ?>
                                                        <form
                                                            class="product-grid-item__primary-action"
                                                            data-role="tocart-form"
                                                            data-product-sku="<?= $block->escapeHtmlAttr($_item->getSku()) ?>"
                                                            action="<?= $block->escapeUrl($postParams['action']) ?>"
                                                            method="post"
                                                        >
                                                            <input
                                                                type="hidden"
                                                                name="product"
                                                                value="<?= /* @noEscape */ $postParams['data']['product'] ?>"
                                                            >
                                                            <input
                                                                type="hidden"
                                                                name="<?= /* @noEscape */ Magento\Framework\App\Action\Action::PARAM_NAME_URL_ENCODED ?>"
                                                                value="<?= /* @noEscape */ $postParams['data'][Magento\Framework\App\Action\Action::PARAM_NAME_URL_ENCODED] ?>"
                                                            >
                                                            <?= $block->getBlockHtml('formkey') ?>
                                                            <button
                                                                class="
                                                                    button
                                                                    button--add-to
                                                                    tocart
                                                                    action
                                                                "
                                                                type="submit"
                                                                aria-label="<?= $block->escapeHtmlAttr(__('Add to Cart')) ?>"
                                                                data-testid="add-to-cart-button"
                                                            >
                                                                <svg
                                                                    class="icon button__icon"
                                                                    role="presentation"
                                                                    focusable="false"
                                                                >
                                                                    <use xlink:href="<?= $block->escapeUrl($block->getViewFileUrl('/images/icons-sprite.svg#shopping-cart')) ?>"></use>
                                                                </svg>
                                                            </button>
                                                        </form>
                                                        <?php if (!$block->isRedirectToCartEnabled()) :?>
                                                            <script type="text/x-magento-init">
                                                            {
                                                                "[data-role=tocart-form], .form.map.checkout": {
                                                                    "catalogAddToCart": {
                                                                        "product_sku": "<?= $block->escapeJs($_item->getSku()) ?>"
                                                                    }
                                                                }
                                                            }
                                                            </script>
                                                        <?php endif; ?>
                                                    <?php endif; ?>
                                                </div>
                                            <?php else: ?>
                                                <?php if ($_item->getIsSalable()): ?>
                                                    <div class="stock available">
                                                        <?= __('In stock') ?>
                                                    </div>
                                                <?php else: ?>
                                                    <div class="stock unavailable">
                                                        <?= __('Out of stock') ?>
                                                    </div>
                                                <?php endif; ?>
                                            <?php endif; ?>
                                        <?php endif; ?>
                                    </div>
                                <?php endif; ?>
                            </div>
                        </section>
                    </div>
                </div>
            <?php endforeach; ?>

            <?php
            $sliderBlockAfter = $this->getLayout()
                ->createBlock("Magento\Framework\View\Element\Template")
                ->setTemplate("Magento_Theme::html/slider.phtml");

            $sliderBlockAfter->setData([
                'slider_html'   => 'after-slides'
            ]);
            ?>
            <?= $sliderBlockAfter->toHtml(); ?>
        </div>
    </section>
<?php endif; ?>
